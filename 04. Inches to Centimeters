using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace inchesToCantimeeters
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double cantimeeterse = double.Parse(Console.ReadLine());
            double inches = 2.54;
            double sum = cantimeeterse * inches;
            Console.WriteLine(sum);
        
        }
    }
}




